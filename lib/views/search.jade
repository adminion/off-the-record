extends layout

block scripts
  script(src='/scripts/search.js')
block styles
  link(ref='/styles/search.css')
  
block pageTitle
  #pageTitle='Search'

block content
  #content
    input(id="search-input" type="search" incremental="incremental" placeholder="search for users" disabled="disabled")
    button(id="search-users", disabled="disabled") Search
    h2 Friends:
    ul#friends

    h2 Friends of Friends:
    ul#friends-of-friends

    h2 Non-Friends:
    ul#non-friends


