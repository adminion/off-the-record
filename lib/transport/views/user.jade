extends layout

block socketio
    script(src='/socket.io/socket.io.js')
    script(src='/scripts/off-the-record.js')
    script(src='/scripts/user.js')

block content
    #contents
        h2= userInfo.username
        table(id="profile-table")
            tbody
                each propName in Object.keys(userInfo.profile)
                    if userInfo.profile[propName]
                        tr
                            td=propName
                            td=userInfo.profile[propName]
        if (userInfo.friendRequest && userInfo.relationship < relationships.PENDING_FRIENDS)
            button(id="friendRequest", value=userInfo._id) friend request
        if userInfo.chatRequest
            button(id="chatRequest") chat request